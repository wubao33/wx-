  right: 10rpx;
  background-color:white;
  z-index: 1000;
}
.languagestyle{
  /* background-color: #dedede; */
  padding: 20rpx 0;
  margin-right: 5rpx;
  border: 1rpx solid #999999;
}
.language{
  display: none;
}

.title_wrap{
  text-align: center;
}
